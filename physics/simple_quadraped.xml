    </asset>
    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 10" dir="0 0 -1"/>
        <body name="torso" pos="0 0 0.5">
            <freejoint/>
            <geom type="box" size="0.2 0.1 0.03" mass="10"/>
